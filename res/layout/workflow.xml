<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            android:orientation="vertical" >    
<RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/clrOffwhite"
            android:orientation="vertical">
         
<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:background="#B85C8A">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="22sp"            
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="mसखी: ए.एन.एम" />
</LinearLayout>
        <Button
            android:id="@+id/btnMPreg"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text=" गर्भवती पंजीकरण"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnMBirth"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="जन्म पंजीकरण"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnMDeath"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:text="मृत्यु (माँ व शिशु)"
            android:visibility="gone"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnMVisit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="गृह भ्रमण"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="शिशु रिपोर्ट"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="28dp" />

        <Button
            android:id="@+id/vhsndpreg"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="ए.एन.सी (गर्भावस्था)"
            android:textSize="24dp" />
        
        <Button
            android:id="@+id/vhsndbirth"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_color"
            android:gravity="center_vertical|center_horizontal"
            android:text="टीकाकरण (शिशु 0-1)"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btnDreport"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_effect_for_blue_colour"
            android:gravity="center_vertical|center_horizontal"
            android:text="ताज़ा रिपोर्ट"       
            android:textSize="28dp" />
        
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="50dip"        
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/button_effect_for_brown_clour"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sync Asha Data"
            android:textSize="28dp" />
        
        <Button
            android:id="@+id/btnAnmUpdate"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:background="@drawable/button_effect_for_brown_clour"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sync ANM Data"
            android:textSize="28dp" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
</ScrollView>