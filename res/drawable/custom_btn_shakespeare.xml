<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0000FF" />
             <gradient  android:angle="-90"  android:startColor="#3333CC" android:endColor="#3083FF"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0000FF" />
             <solid  android:color="#0066FF"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#0000FF" />
             <gradient  android:angle="-90"  android:startColor="#19A3FF" android:endColor="#0066FF" />            
         </shape>
     </item>
</selector>